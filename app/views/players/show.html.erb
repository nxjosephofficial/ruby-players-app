<% unless notice.nil? %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>

<%= render @player %>

<div>
  <br>
  <%= link_to "Edit this player", edit_player_path(@player), class:"btn btn-sm btn-secondary" %> |
  <%= link_to "Back to players", players_path, class:"btn btn-sm btn-dark" %>
  <br><br>
  <%= button_to "Destroy this player", @player, method: :delete, class:"btn btn-sm btn-danger" %>
</div>
